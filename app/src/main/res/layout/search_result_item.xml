<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/script_title"
      android:layout_marginEnd="@dimen/script_list_item_horizontal_padding"
      android:layout_marginStart="@dimen/script_list_item_horizontal_padding"
      android:layout_marginTop="@dimen/search_item_padding"
      android:layout_marginBottom="@dimen/search_item_padding"
      style="@style/AppTheme.ScriptListItemHeading"
      android:fontFamily="sans-serif-condensed"
      android:textStyle="normal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/textPrimaryDark"
      android:alpha="0.12"/>
</LinearLayout>